---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const base = import.meta.env.BASE_URL;

// ブログ記事を取得
const allPosts = import.meta.glob('./*.md', { eager: true });
const posts = Object.values(allPosts) as any[];
const sortedPosts = posts
  .filter(post => !post.frontmatter.draft)
  .sort((a, b) => new Date(b.frontmatter.date).getTime() - new Date(a.frontmatter.date).getTime());
---

<Layout title="Blog">
  <Header />
  
  <main class="blog-page">
    <div class="container">
      <h1 class="page-title">Blog</h1>
      <p class="page-description">CyberMate LLCからのお知らせや、学術情報流通に関する記事を掲載しています。</p>
      
      {sortedPosts.length > 0 ? (
        <div class="posts-grid">
          {sortedPosts.map((post) => {
            const slug = post.file.split('/').pop()?.replace('.md', '');
            const imageUrl = post.frontmatter.image 
              ? (post.frontmatter.image.startsWith('/') 
                ? `${base}${post.frontmatter.image.slice(1)}` 
                : post.frontmatter.image)
              : null;
            return (
              <article class="post-card card">
                {imageUrl && (
                  <img src={imageUrl} alt={post.frontmatter.title} class="post-image" />
                )}
                <div class="post-content">
                  <time datetime={post.frontmatter.date}>
                    {new Date(post.frontmatter.date).toLocaleDateString('ja-JP', {
                      year: 'numeric',
                      month: 'long',
                      day: 'numeric'
                    })}
                  </time>
                  <h2><a href={`${base}/blog/${slug}/`}>{post.frontmatter.title}</a></h2>
                  <p>{post.frontmatter.description}</p>
                  <a href={`${base}/blog/${slug}/`} class="read-more">続きを読む →</a>
                </div>
              </article>
            );
          })}
        </div>
      ) : (
        <div class="no-posts">
          <p>まだ記事がありません。</p>
        </div>
      )}
    </div>
  </main>
  
  <Footer />
</Layout>

<style>
  .blog-page {
    padding-top: calc(var(--header-height) + var(--spacing-lg));
    padding-bottom: var(--spacing-xl);
    min-height: 80vh;
  }
  
  .page-title {
    text-align: center;
    margin-bottom: var(--spacing-xs);
  }
  
  .page-description {
    text-align: center;
    color: var(--color-text-light);
    margin-bottom: var(--spacing-lg);
  }
  
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
    gap: var(--spacing-md);
  }
  
  .post-card {
    overflow: hidden;
    padding: 0;
  }
  
  .post-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
  }
  
  .post-content {
    padding: var(--spacing-md);
  }
  
  .post-content time {
    color: var(--color-text-light);
    font-size: 0.85rem;
  }
  
  .post-content h2 {
    font-size: 1.25rem;
    margin: 0.5rem 0;
  }
  
  .post-content h2 a {
    color: var(--color-primary);
  }
  
  .post-content h2 a:hover {
    color: var(--color-accent);
  }
  
  .post-content p {
    color: var(--color-text-light);
    font-size: 0.95rem;
  }
  
  .read-more {
    font-weight: 500;
    font-size: 0.9rem;
  }
  
  .no-posts {
    text-align: center;
    padding: var(--spacing-xl);
    color: var(--color-text-light);
  }
</style>
